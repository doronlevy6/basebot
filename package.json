{
  "name": "base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx run-many --target=test --all",
    "format": "prettier --write .",
    "lint": "nx run-many --target=lint --all --fix",
    "secrets:read": "aws s3 sync s3://base-service-secrets/secrets/basebot secrets",
    "secrets:write": "aws s3 sync secrets s3://base-service-secrets/secrets/basebot",
    "docker:login": "aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 221762091942.dkr.ecr.us-east-1.amazonaws.com",
    "start:local": "npm run docker:login && docker compose up",
    "rebuild:local": "npm run start:local -- --build",
    "clean:local": "docker compose down",
    "ngrok": "ngrok http 3000",
    "ngrok:base": "ngrok http 3000 --subdomain thebase",
    "codegen": "openapi-generator-cli generate -i http://localhost:3000/oapi-json -o libs/oapigen/src/lib -g typescript-axios --additional-properties=supportsES6=true,npmVersion=8.5.0"
  },
  "private": true,
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@slack/bolt": "^3.11.1",
    "@slack/web-api": "^6.7.1",
    "axios": "^0.27.2",
    "bullmq": "^1.85.3",
    "dotenv": "^16.0.1",
    "express": "4.17.2",
    "ioredis": "^5.0.6",
    "knex": "^2.1.0",
    "pg": "^8.7.3",
    "prom-client": "^14.0.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@nrwl/cli": "14.1.9",
    "@nrwl/eslint-plugin-nx": "14.1.9",
    "@nrwl/express": "14.1.9",
    "@nrwl/jest": "14.1.9",
    "@nrwl/linter": "14.1.9",
    "@nrwl/node": "14.1.9",
    "@nrwl/workspace": "14.1.9",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.18.0",
    "@typescript-eslint/parser": "~5.18.0",
    "eslint": "~8.12.0",
    "eslint-config-prettier": "8.1.0",
    "jest": "27.5.1",
    "nx": "14.1.9",
    "prettier": "^2.5.1",
    "ts-jest": "27.1.4",
    "ts-node": "9.1.1",
    "typescript": "~4.6.2"
  }
}
